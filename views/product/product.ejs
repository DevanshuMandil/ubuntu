<body>
        <div class="container">
                <div style="width: 90%;margin-top: 30px;">
                    <div class="row">
                        <select id="categoryid" class="form-control" style="width: 300px;">
                            <option value="0" selected disabled>Select Category</option>
                        </select>
                        <input type="text" id="name" class="form-control" style="width: 300px" placeholder="Product Name">
                        <input type="text" id="price" class="form-control" style="width: 300px" placeholder="Product Price">
                    </div>
                    <div class="row">
                        <input type="text" id="offerprice" class="form-control" style="width: 300px" placeholder="Product Offerprice">
                        <select id="avail" class="form-control" style="width: 300px;">
                            <option value="0" selected disabled>Avaibility</option>
                            <option value="yes">Yes</option>
                            <option value="no">No</option>
                        </select>
                        <button id="submit" class="btn btn-primary btn-block" style="width: 300px; margin: 20px;">Submit</button>
                    </div>
                </div>
                <br>
                <br>
                <div id="records">
                            <center>
                                Loading....
                            </center>
                </div>
            </div>
